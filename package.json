{
  "dependencies": {
    "wrangler": "^3.5.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20230404.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.8",
    "typescript": "^5.0.4",
    "vitest": "^0.30.1"
  },
  "scripts": {
    "build": "wrangler build",
    "preview": "wrangler preview --watch",
    "dev": "wrangler dev --watch",
    "format": "eslint src --cache --report-unused-disable-directives --ext .js,.jsx,.ts,.tsx --fix",
    "lint": "eslint src --cache --report-unused-disable-directives --ext .js,.jsx,.ts,.tsx",
    "test": "vitest run",
    "test-update": "vitest run --update"
  },
  "eslintConfig": {
    "env": {
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "overrides": [
      {
        "files": [
          "**/*.ts"
        ],
        "parser": "@typescript-eslint/parser",
        "extends": [
          "eslint:recommended",
          "plugin:@typescript-eslint/recommended",
          "plugin:prettier/recommended"
        ],
        "plugins": [
          "@typescript-eslint"
        ],
        "rules": {
          "prettier/prettier": [
            "error",
            {
              "semi": false
            }
          ]
        },
        "parserOptions": {
          "sourceType": "module",
          "warnOnUnsupportedTypeScriptVersion": true
        }
      },
      {
        "files": [
          "*/vite.config.ts",
          "scripts/**/*.js"
        ],
        "env": {
          "node": true
        }
      }
    ],
    "ignorePatterns": [
      "/.cache",
      "/.git",
      "/.husky",
      "/.yarn",
      "/*/dist"
    ]
  }
}
